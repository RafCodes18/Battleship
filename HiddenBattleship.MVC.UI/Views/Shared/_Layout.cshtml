@using Microsoft.AspNetCore.Http;
@{
    ViewBag.Title = "Hidden Battleship";
}
@inject IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HiddenBattleship.MVC.UI.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <style>
            .battl{
                font-family: "Kode Mono", monospace;               
                font-size: x-large;
                text-align: center;
                vertical-align: baseline;  
                margin: 0;
                padding: 0;
            }

            .blue{
                color: royalblue;
            }

           darkkkk{
                background-color: #a4a4a4 !important;
                margin-top: 10px;
            }

            .dark-green{
                background-color: #f2a359;
                border-radius: 14px;
                color: grey;
            }

            .dark-green:hover {
                    background-color: #bab5b4;
                    border-radius: 4px;
                color: white;
            }


            .footer {
                color: white !important
            }

            .navbar-nav{
                justify-content: right;
            }

            .prof-link:hover{
                text-decoration:underline;
            }

            .nav-bar-full{
                padding: 0 20px;
                margin: 0;
            }

            .login{
                border-radius: 14px;
                margin-right: 10px;
                margin-left: 10px;
            }

            .web-name{
                padding: 0 !important;
                margin-top: 10px !important;
            }
        </style>
        <nav class="darkkk navbar navbar-expand-sm navbar-toggleable-sm navbar-light   box-shadow mb-3">
            <div class="container-fluid nav-bar-full">
                <a class="navbar-brand battl" asp-area="" asp-controller="Home" asp-action="Index"><p class="txt-light web-name">BattleShip ONLINE</p></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                   
                        <li class="nav-item">
                            <a class="nav-link text-dark prof-link" asp-area="" asp-controller="Profile" asp-route-id="" asp-action="Index">Profile <img src="~/w3images/profile-user.png" height="35px;" width="35px;"></img></a>                            
                        </li>
                    </ul>

                  
                    <!--WELCOME USER-->
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            @{
                                var fullname = HttpContextAccessor.HttpContext?.Session.GetString("username");  
                                if(fullname == null)
                                {

                                }
                                else
                                {
                                    <a href="../Profile/Index" class="nav-link text-dark"><span class="blue">@fullname</span></a>

                                }
                            }
                            
                        </li>
                    </ul>

                     <!--AUTHENTICATION CHECK-->
                    <ul class="navbar-nav ms-auto">
                   @if(Authenticate.IsAuthenticated(Context))
                    {
                         <li class="nav-item bg-secondary rounded m-2 login">
                                <a class="nav-link bg-secondary text-white dark-green" asp-area="" asp-controller="Profile" asp-action="Logout">Logout</a>
                         </li>
                    }
                    else
                    {
                         <li class="nav-item bg-light login ">
                              <a class="nav-link text-white dark-green" asp-area="" asp-controller="Profile" asp-action="Login">Login</a>
                         </li>
                    }                              
                    </ul>        
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - A Rafael Parra Website - <a href="https://rafaelparra.dev">Return to Porfolio Here</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
